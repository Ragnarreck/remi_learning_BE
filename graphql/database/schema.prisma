model User {
  id    String  @id @default(uuid())
  email String  @unique
  name  String?
  tasks Task[]
}

model Task {
  id        String   @id @default(uuid())
  title     String
  content   String?
  finished  Boolean  @default(false)
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  String?
  createdAt DateTime @default(now()) @map("created_at")
}
