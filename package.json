{
  "name": "tasks",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "generate": "prisma generate && yarn generate:nexus && yarn generate:documents",
    "generate:documents": "graphql-codegen --config graphql.config.js",
    "generate:env": "npx ts-node --skip-project --transpile-only src/library/generate.env.ts",
    "generate:nexus": "npx ts-node --skip-project --transpile-only -r tsconfig-paths/register ./graphql/schema/index.ts --nexus-exit"
  },
  "prisma": {
    "schema": "./graphql/database/schema.prisma"
  },
  "dependencies": {
    "@clerk/clerk-sdk-node": "^3.3.5",
