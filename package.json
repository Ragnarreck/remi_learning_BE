    "@mui/material": "^5.6.2",
    "@next-auth/prisma-adapter": "^1.0.3",
    "@nexus/schema": "^0.20.1",
    "@prisma/client": "^3.12.0",
    "classnames": "^2.3.1",
    "clerk": "^0.8.3",
    "graphql": "^16.3.0",
    "graphql-helix": "^1.12.0",
    "material-ui": "^0.20.2",
    "next": "12.1.5",
    "next-urql": "^3.3.2",
    "nexus": "^1.3.0",
